<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_chap02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="chapter02 - Advanced Graphics"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_course01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="course 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_chap02" />

    <Button
        android:id="@+id/bt_course02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="course 2"
        app:layout_constraintStart_toEndOf="@id/bt_course01"
        app:layout_constraintTop_toTopOf="@id/bt_course01" />

    <Button
        android:id="@+id/bt_course03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="course 3"
        app:layout_constraintStart_toEndOf="@id/bt_course02"
        app:layout_constraintTop_toTopOf="@id/bt_course02" />

    <Button
        android:id="@+id/bt_course04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="course 4"
        app:layout_constraintStart_toEndOf="@id/bt_course03"
        app:layout_constraintTop_toTopOf="@id/bt_course03" />

    <Button
        android:id="@+id/bt_activity_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_course01" />

</androidx.constraintlayout.widget.ConstraintLayout>
